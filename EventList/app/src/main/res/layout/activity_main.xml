<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.venky.eventlist.MainActivity">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/event_Name"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:hint="Event Name" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/event_Desc"
        android:layout_below="@+id/event_Name"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:hint="Event Description" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/event_Location"
        android:layout_below="@+id/event_Desc"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:hint="Event Location" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:inputType="date"
        android:ems="10"
        android:id="@+id/event_Date"
        android:hint="Event Date DD/MM/YY"
        android:layout_below="@+id/event_Location"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="180dp"
        android:layout_height="50dp"
        android:text="Save"
        android:id="@+id/event_Save"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/event_View"
        android:layout_alignStart="@+id/event_View" />

    <Button
        android:layout_width="180dp"
        android:layout_height="50dp"
        android:text="View Events"
        android:id="@+id/event_View"
        android:layout_below="@+id/event_Save"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
